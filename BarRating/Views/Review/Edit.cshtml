
@using BarRating.Data.Enums
@model BarRating.Models.Review.EditReviewViewModel
@{
    ViewData["Title"] = "Edit Your Review";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h5>Edit Review</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="BarId" />

                        <div class="mb-3">
                            <label asp-for="Rating" class="form-label">Your Rating</label>
                            <select asp-for="Rating" class="form-control" required>
                                <option value="">Select a rating...</option>
                                <option value="5">⭐⭐⭐⭐⭐ - Excellent</option>
                                <option value="4">⭐⭐⭐⭐ - Good</option>
                                <option value="3">⭐⭐⭐ - Average</option>
                                <option value="2">⭐⭐ - Poor</option>
                                <option value="1">⭐ - Terrible</option>
                            </select>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Text" class="form-label">Review</label>
                            <textarea asp-for="Text" class="form-control" rows="5" maxlength="1000" required></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                            <small class="form-text text-muted">Max 1000 characters.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Price Category</label>
                            <select asp-for="Price"
                                    asp-items="Html.GetEnumSelectList<PriceCategory>()"
                                    class="form-control">
                                <option value="">Select price...</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="collapse" data-bs-target="#peopleSection">
                                How many people were there? (optional)
                            </button>
                            <div class="collapse mt-2" id="peopleSection">
                                <select asp-for="NumberOfPeople" asp-items="Html.GetEnumSelectList<NumberOfPeople>()" class="form-control">
                                    <option value="">Select group size...</option>
                                </select>
                                <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label>What describes this visit?</label>
                            <div class="row g-2">
                                @foreach (var tag in Enum.GetValues<Tags>())
                                {
                                    if (tag == Tags.None) continue;

                                    <div class="col-md-6 col-lg-4">
                                        <div class="form-check">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   name="Tags"
                                                   value="@((int)tag)"
                                                   id="tag_@((int)tag)"
                                            @(Model.Tags?.Contains(tag) == true ? "checked" : "") />
                                            <label class="form-check-label" for="tag_@((int)tag)">
                                                @tag.GetDisplayName()
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                            <small class="form-text text-muted">Select all that apply.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">Update Review</button>
                            <a asp-controller="Bar" asp-action="Specify" asp-route-barId="@Model.BarId" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}