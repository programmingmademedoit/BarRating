@model BarRating.Models.Review.EditReviewViewModel

@{
    ViewData["Title"] = "Edit Review";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-primary">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4 text-primary">Edit Review</h2>
                    <form asp-controller="Review" asp-action="Edit" method="post" enctype="multipart/form-data">
                        <!-- Hidden field for Bar ID -->
                        <input type="hidden" asp-for="@Model.BarId" value="@Model.BarId" />
                        <input type="hidden" asp-for="@Model.ReviewId" value="@Model.ReviewId" />


                        <div class="mb-3">
                            <label for="Text" class="form-label">Text</label>
                            <textarea class="form-control" id="Text" name="Text" rows="5" required>@Model.Text</textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
                            <a asp-controller="Bar" asp-action="Specify" asp-route-barId="@Model.BarId" class="btn btn-secondary mr-2">Edit Review</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
