@model BarRating.Models.DashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>@ViewData["Title"]</h2>

<div class="dashboard-summary">
    <div class="summary-item">
        <h3>Total Users</h3>
        <p>@Model.UserCount</p>
    </div>
    <div class="summary-item">
        <h3>Total Restaurants</h3>
        <p>@Model.RestaurantCount</p>
    </div>
    <div class="summary-item">
        <h3>Total Reviews</h3>
        <p>@Model.ReviewCount</p>
    </div>
</div>

<style>
    .dashboard-summary {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
    }

    .summary-item {
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        text-align: center;
        width: 30%;
    }

    .summary-item h3 {
        margin-bottom: 10px;
    }

    .summary-item p {
        font-size: 24px;
        font-weight: bold;
    }
</style>
