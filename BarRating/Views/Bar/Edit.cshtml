@using BarRating.Models.Bar
@model EditBarViewModel

@{
    ViewData["Title"] = "Edit Bar";
}

<div class="container mt-4">
    <h2 class="text-center">Edit Bar</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="BarId" />
        <input type="hidden" asp-for="@Model.CreatedById" value="@Model.CreatedById" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Image" class="form-label">Current Image</label>
            @if (!string.IsNullOrEmpty(Model.URL))
            {
                <div>
                    <img src="@Model.URL" alt="Current Image" style="max-width: 150px; height: auto;" />
                </div>
            }
            <label asp-for="Image" class="form-label">Upload New Image (optional)</label>
            <input asp-for="Image" type="file" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" asp-controller="Bar" class="btn btn-secondary mt-2">Cancel</a>
        </div>
    </form>
</div>
