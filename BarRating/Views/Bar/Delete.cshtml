@model BarRating.Models.Bar.DeleteBarViewModel

@{
    ViewData["Title"] = "Delete Bar";
}

<div class="container mt-4">
    <h2 class="text-center">Delete Bar</h2>

    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to delete this bar @Model.Name?
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" name="barId" value="@Model.BarId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Bar" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

