@model BarRating.Models.Bar.DeleteBarViewModel
@{
    ViewData["Title"] = "Delete Bar";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4>Confirm Deletion</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-danger">Are you sure you want to delete this bar?</h5>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="BarId" />

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-danger btn-lg">
                                Yes, Delete Bar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>