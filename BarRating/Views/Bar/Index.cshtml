@using BarRating.Models.Bar
@model BarRating.Models.Bar.BarViewModel

@{
    ViewData["Title"] = "Bars";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Discover Bars</h2>

    <!-- Search Bar -->
    <form asp-controller="Bar" asp-action="Search" method="get" class="form-inline mb-4 justify-content-center">
        <div class="input-group">
            <input type="text" name="searchQuery" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search for bars..." style="width: 300px;">
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

    <!-- Admin Create Button -->
    @if (User.IsInRole("Admin"))
    {
        <div class="text-right mb-3">
            <a asp-controller="Bar" asp-action="Create" class="btn btn-success">Create New Bar</a>
        </div>
    }

    <!-- Bars Table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Bars.Any())
                {
                    @foreach (var bar in Model.Bars)
                    {
                        <tr>
                            <td class="align-middle">@bar.Name</td>
                            <td class="align-middle">@bar.Description</td>
                            <td class="align-middle">
                                <img src="@bar.Image" alt="@bar.Name" class="img-fluid rounded" style="max-width: 150px; height: auto;" />
                            </td>
                            <td class="align-middle">
                                <a asp-controller="Bar" asp-action="Specify" asp-route-barId="@bar.BarId" class="btn btn-info btn-sm mt-2" title="View Reviews">Reviews</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-controller="Bar" asp-action="Edit" asp-route-barId="@bar.BarId" class="btn btn-warning btn-sm mt-2" title="Edit Bar">Edit</a>
                                    <a asp-controller="Bar" asp-action="Delete" asp-route-barId="@bar.BarId" class="btn btn-danger btn-sm mt-2" title="Delete Bar">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">No bars found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Bootstrap JS and dependencies (including jQuery) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
