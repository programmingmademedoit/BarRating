@model BarRating.Models.User.EditUserViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Edit User</h1>
        <form asp-action="Edit" asp-route-id="@Model.Id "method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input type="text" id="FirstName" name="FirstName" class="form-control" value="@Model.FirstName" />
            </div>

            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input type="text" id="LastName" name="LastName" class="form-control" value="@Model.LastName" />
            </div>

            <div class="form-group">
                <label for="UserName">Username</label>
                <input type="text" id="UserName" name="UserName" class="form-control" value="@Model.UserName" />
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" id="Email" name="Email" class="form-control" value="@Model.Email" />
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-controller="Home" asp-action="Users" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
