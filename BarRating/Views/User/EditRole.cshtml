@model BarRating.Models.Admin.EditUserRoleViewModel

@{
    ViewData["Title"] = "Edit User Roles";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User Roles</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }

        .role-checkbox {
            margin-right: 10px;
        }

        .btn-primary {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Edit User Roles</h1>

        <form asp-action="EditRole" method="post">
            <input type="hidden" name="UserId" value="@Model.UserId" />

            <div class="form-group">
                <label for="userName">User Name:</label>
                <input type="text" class="form-control" id="userName" value="@Model.UserName" disabled />
            </div>

            <div class="form-group">
                <label for="roles">Roles:</label>
                @foreach (var role in Model.AllRoles)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="role_@role.Id" name="SelectedRoles" value="@role.Name" />
                        <label class="form-check-label" for="role_@role.Id">@role.Name</label>
                    </div>
                }
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Users"asp-controller="Home" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

